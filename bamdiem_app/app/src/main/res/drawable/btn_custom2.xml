<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State khi button được nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#807F7F"/> <!-- Màu đỏ khi nhấn -->
        </shape>
    </item>
    <!-- State khi button được chọn -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#5E5F60"/> <!-- Màu xanh khi được chọn -->
        </shape>
    </item>
    <!-- State mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF00"/>
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="#0C0101"/><!-- Màu xanh dương mặc định -->
        </shape>
    </item>
</selector>
